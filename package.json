{
  "name": "battleships",
  "version": "1.0.0",
  "description": "A battleships game in written in purescript",
  "scripts": {
    "postinstall": "spago install",
    "clean": "rm -rf node_modules output .spago dist .cache",
    "build": "spago build",
    "watch": "spago build --watch",
    "bundle": "spago bundle-app --main Main --to bundle/app.js && parcel build assets/index.html assets/main.css",
    "serve": "yarn bundle && http-server dist",
    "test": "spago test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:simonolander/battleships.git"
  },
  "keywords": [
    "purescript"
  ],
  "author": "Simon Olander",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/simonolander/battleships/issues"
  },
  "homepage": "https://github.com/simonolander/battleships#readme",
  "devDependencies": {
    "parcel-bundler": "^1.12.3",
    "purescript": "^0.13.5",
    "spago": "^0.13.0"
  },
  "dependencies": {
    "decimal.js": "^10.1.1",
    "http-server": "^0.11.1",
    "marked": "^0.6.2"
  }
}